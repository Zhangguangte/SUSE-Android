<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/grade_card"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/grade_title"
                android:textSize="24sp"
                android:textColor="#CCFFFFFF"
                android:text="算法与数据结构"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/grade_separe"
                android:layout_below="@id/grade_title"
                android:layout_width="match_parent"
                android:background="#33000000"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/grade_time"
                android:layout_below="@id/grade_separe"
                android:text="2015-2016年 第一学期"
                android:textColor="#CCFFFFFF"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/grade_credit"
                android:layout_below="@id/grade_time"
                android:paddingTop="4dp"
                android:textColor="#CCFFFFFF"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:text="学分: 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grade_normal_grade"
                android:layout_below="@id/grade_credit"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp"
                android:text="平时成绩: 85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grade_final_grade"
                android:layout_below="@id/grade_normal_grade"
                android:textColor="#CCFFFFFF"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:text="期末成绩: 90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>



    </android.support.v7.widget.CardView>

</FrameLayout>
